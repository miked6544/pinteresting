  <p align="center">&nbsp;</p>

  <div class="container"> 
    <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert alert-info") %>
    <% end %>
      <%= yield %>
  </div>
</body>

</html>